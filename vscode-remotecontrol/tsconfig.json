{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2022",
		"lib": [
			"es2022"
		],
		"sourceMap": true,
		"rootDir": ".",
		"strict": true,
		"outDir": "./out",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
